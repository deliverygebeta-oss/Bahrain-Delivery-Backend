# ============================================
# GEBETA DELIVERY BACKEND - ENV CONFIGURATION
# ============================================
# Copy this file to .env and update with your actual values

# ------------------------------
# SERVER CONFIGURATION
# ------------------------------
NODE_ENV=production
PORT=3000

# ------------------------------
# DATABASE
# ------------------------------
# MongoDB connection string
DATABASE=mongodb://localhost:27017/gebeta-delivery
# or for MongoDB Atlas:
# DATABASE=mongodb+srv://<username>:<password>@cluster.mongodb.net/gebeta-delivery?retryWrites=true&w=majority

# ------------------------------
# AUTHENTICATION & SECURITY
# ------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Session secret for express-session
SESSION_SECRET=your-super-secret-session-key-change-this

# ------------------------------
# FRONTEND URL (for CORS)
# ------------------------------
FRONTEND_URL=https://yourdomain.com

# ------------------------------
# SSL/TLS CERTIFICATES (Optional - for HTTPS)
# ------------------------------
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt

# ------------------------------
# CLOUDINARY (for image uploads)
# ------------------------------
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ------------------------------
# EMAIL SERVICE (Nodemailer)
# ------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@gebetadelivery.com

# ------------------------------
# SMS SERVICE (Twilio)
# ------------------------------
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Alternative: Afro Message Service
AFRO_MESSAGE_API_KEY=your-afro-message-api-key
AFRO_MESSAGE_SENDER=your-sender-name

# ------------------------------
# FIREBASE (for push notifications)
# ------------------------------
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email@project.iam.gserviceaccount.com
# Or Firebase config JSON path:
FIREBASE_CONFIG_PATH=/path/to/firebase-config.json

# ------------------------------
# REDIS (for Socket.IO adapter & caching)
# ------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
# or Redis URL:
REDIS_URL=redis://:password@localhost:6379

# ------------------------------
# GEOCODING SERVICE
# ------------------------------
GEOCODER_PROVIDER=google
GEOCODER_API_KEY=your-geocoding-api-key

# ------------------------------
# LOGGING
# ------------------------------
LOG_LEVEL=info

# ------------------------------
# RATE LIMITING
# ------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=300

# ------------------------------
# FILE UPLOAD LIMITS
# ------------------------------
MAX_FILE_SIZE=5242880
# 5MB in bytes

# ------------------------------
# DELIVERY FEE CONFIGURATION
# ------------------------------
BASE_DELIVERY_FEE=50
PER_KM_RATE=10
MINIMUM_DELIVERY_FEE=30
MAXIMUM_DELIVERY_FEE=200

# ------------------------------
# PAYMENT GATEWAY (if applicable)
# ------------------------------
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-key
PAYMENT_GATEWAY_SECRET=your-payment-gateway-secret


